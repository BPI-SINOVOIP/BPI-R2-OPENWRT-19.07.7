Config:
comment "SSL support"

choice
        prompt "Selected SSL library"
        default DNSDIST_OPENSSSL

        config DNSDIST_OPENSSL
                bool "OpenSSL"

        config DNSDIST_GNUTLS
                bool "GnuTLS"

        config DNSDIST_NOSSL
                bool "No SSL support"

endchoice
